{
	"manifest_version":2,

	"name":"quick search",
	"description":"quicksearchüîç is an extension for google chrome designed to help graphic designer / developers to search for pictures quickly",
	"version":"1.2.2",

"browser_action":{
	"default_icon" : "icon.png",
	"default_popup": "popup.html"
},	
	"background": { 
		"scripts": ["background.js"] 
	},
"permissions":[
	"contextMenus",
	"tabs",
	"storage"
]
,
"icons":{
	"16": "icon.png",
	"64" :"icon.png"
	},
	"content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js"     : ["jquery.min.js","scripts.js"],
      "css"    : ["skiodCss.css"]
    }
  ]
}